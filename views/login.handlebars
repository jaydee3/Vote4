{{>navbar pageTitle="Login"}}

 <div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
        	<p>{{feedback}}<p>
			<form action="/login" method="POST">
				<fieldset>
					<div class="form-group mt-5">
						<label for="email" class="sr-only">Email address</label>
						<input type="email" name="user_email" class="form-control mb-2" placeholder="Email address" required autofocus>
					</div>

					<div class="form-group">
						<label for="password" class="sr-only">Password</label>
						<input type="password" name="user_password" class="form-control" placeholder="Password" required>
					</div>

					<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block" id="login" type="submit">Sign in</button>
					</div>

					<div class="form-group">
						New user? <a href="/newUser" class="text">Create an account</a>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
</div>

